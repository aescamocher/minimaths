<script>
  function checkAnswer(inputId, feedbackId, correctAnswer) {
    const input = document.getElementById(inputId);
    const feedback = document.getElementById(feedbackId);
    const val = input.value.trim();

    if (val === '') {
      feedback.textContent = 'Entre une réponse.';
      feedback.style.color = '#d90429';
    } else if (val === correctAnswer) {
      feedback.textContent = '✅ Bravo ! Pour plus de détails regarde la vidéo ci-dessous.';
      feedback.style.color = '#198754';
    } else {
      feedback.textContent = '❌ Ce n’est pas la bonne réponse. Regarde la vidéo ci-dessous pour comprendre.';
      feedback.style.color = '#d90429';
    }
  }

  document.getElementById('valider31').addEventListener('click', () => {
    checkAnswer('reponse31', 'feedback31', '125');
  });

  document.getElementById('valider32').addEventListener('click', () => {
    checkAnswer('reponse32', 'feedback32', '1');
  });
</script>


