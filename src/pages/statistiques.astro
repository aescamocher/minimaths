<script>
(() => {
  const btnStart = document.getElementById("startRangeQuiz");
  const container = document.getElementById("rangeQuizContainer");
  const txtQuestion = document.getElementById("rangeQuestion");
  const txtListe = document.getElementById("rangeListe");
  const btnValider = document.getElementById("validerRange");
  const input = document.getElementById("rangeInput");
  const txtFeedback = document.getElementById("rangeFeedback");
  const txtScore = document.getElementById("rangeScoreFinal");
  const btnReplay = document.getElementById("replayRangeQuiz");

  let questions = [], idx = 0, score = 0;

  function genererSerie() {
    const nombres = [];
    for (let i = 0; i < 5; i++) {
      nombres.push(Math.floor(Math.random() * 21));
    }
    const min = Math.min(...nombres);
    const max = Math.max(...nombres);
    const etendue = max - min;
    return { nombres: shuffle(nombres), etendue };
  }

  function shuffle(arr) {
    for (let i = arr.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
  }

  function afficherQuestion() {
    const q = questions[idx];
    txtQuestion.textContent = `(${idx + 1}/5) Quelle est l'√©tendue de la s√©rie suivante ?`;
    txtListe.textContent = `Valeurs : ${q.nombres.join(' ; ')}`;
    input.value = "";
    txtFeedback.textContent = "";
  }

  btnValider.addEventListener("click", () => {
    const userInput = parseInt(input.value.trim());
    const attendu = questions[idx].etendue;
    if (userInput === attendu) {
      txtFeedback.textContent = "‚úÖ Correct !";
      txtFeedback.style.color = "#198754";
      score++;
    } else {
      txtFeedback.textContent = `‚ùå Non, la bonne r√©ponse √©tait ${attendu}`;
      txtFeedback.style.color = "#dc2626";
    }

    setTimeout(() => {
      idx++;
      if (idx < 5) {
        afficherQuestion();
      } else {
        const mention = score === 5 ? "üéâ Parfait !" :
                        score >= 4 ? "üôÇ Pas mal !" :
                        "‚ö†Ô∏è √Ä revoir...";
        txtScore.textContent = `Score : ${score}/5 ‚Äì ${mention}`;
        btnReplay.style.display = "inline-block";
      }
    }, 900);
  });

  function commencerQuiz() {
    questions = [];
    for (let i = 0; i < 5; i++) questions.push(genererSerie());
    idx = 0;
    score = 0;
    txtScore.textContent = "";
    btnReplay.style.display = "none";
    afficherQuestion();
    container.style.display = "block";
  }

  btnStart.addEventListener("click", commencerQuiz);
  btnReplay.addEventListener("click", commencerQuiz);
})();
</script>


