      id="validerG2"
      style="margin-top: 0.5rem; background-color: #4f46e5; color: white; border: none; padding: 0.3rem 0.8rem; border-radius: 6px; cursor: pointer; font-weight: 600;"
    >
      Valider
    </button>
    <p id="feedbackG2" style="margin-top: 0.3rem; font-weight: 600; min-height: 1.2em;"></p>
  </div>
</div>

<script>
  function verifierBloc(idA, idB, attenduA, attenduB, feedbackId) {
    const v1 = document.getElementById(idA).value.trim();
    const v2 = document.getElementById(idB).value.trim();
    const feedback = document.getElementById(feedbackId);

    if (v1 === attenduA && v2 === attenduB) {
      feedback.textContent = '✅ Bravo !';
      feedback.style.color = '#198754';
    } else {
      feedback.textContent = '❌ Mauvaise réponse. Regarde la vidéo !';
      feedback.style.color = '#d90429';
    }
  }

  // Bloc gauche : 2 (haut), 6 (bas)
  document.getElementById('validerG1').addEventListener('click', () => {
    verifierBloc('champG1a', 'champG1b', '2', '6', 'feedbackG1');
  });

  // Bloc droite : 1 (haut), 3 (bas)
  document.getElementById('validerG2').addEventListener('click', () => {
    verifierBloc('champG2a', 'champG2b', '1', '3', 'feedbackG2');
  });
</script>



