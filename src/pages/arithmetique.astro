    if (val === "17") {
      feedback.textContent = "✅ Bravo !";
      feedback.style.color = "#198754";
    } else {
      feedback.textContent = "❌ Mauvaise réponse.";
      feedback.style.color = "#d90429";
    }
  });

  document.getElementById("validerComposition").addEventListener("click", () => {
