  <!-- Volume C -->
  <div style="flex: 1 1 220px; min-width: 200px;">
    <p><strong>Volume C =</strong> (en cm³, approché à l'unité)</p>
    <input
      id="volC123"
      placeholder="?"
      style="width: 100%; text-align: center; padding: 0.4rem; font-size: 1rem; border: 1.5px solid #ccc; border-radius: 6px;"
    />
    <button
      id="validerVolC123"
      style="margin-top: 0.5rem; background-color: #4f46e5; color: white; border: none; padding: 0.4rem 0.8rem; border-radius: 6px; cursor: pointer; font-weight: 600;"
    >
      Valider
    </button>
    <p id="feedbackVolC123" style="margin-top: 0.4rem; font-weight: 600; min-height: 1.2em;"></p>
  </div>

</div>

<script>
  function verifierVolume(inputId, feedbackId, reponse) {
    const val = document.getElementById(inputId).value.trim();
    const feedback = document.getElementById(feedbackId);

    if (val === reponse) {
      feedback.textContent = "✅ Bravo ! Regarde la vidéo pour les explications.";
      feedback.style.color = "#198754";
    } else {
      feedback.textContent = "❌ Ce n’est pas la bonne réponse. Regarde la vidéo ci-dessous.";
      feedback.style.color = "#d90429";
    }
  }

  document.getElementById("validerVolA123").addEventListener("click", () => {
    verifierVolume("volA123", "feedbackVolA123", "397");
  });

  document.getElementById("validerVolB123").addEventListener("click", () => {
    verifierVolume("volB123", "feedbackVolB123", "65");
  });

  document.getElementById("validerVolC123").addEventListener("click", () => {
    verifierVolume("volC123", "feedbackVolC123", "4849");
  });
</script>

  
