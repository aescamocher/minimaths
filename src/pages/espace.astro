<div style="display: flex; gap: 2rem; font-family: system-ui, sans-serif; margin: 2rem 0; flex-wrap: wrap;">

  <!-- Question gauche : Coordonnées de E -->
  <div style="flex: 1 1 300px; min-width: 260px;">
    <p><strong>Coordonnées de E :</strong></p>
    <div style="display: flex; gap: 0.5rem;">
      <input id="eCoord1" placeholder="ex: 70°S" style="width: 80px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
      <input id="eCoord2" placeholder="ex: 45°O" style="width: 80px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
    </div>
    <button
      id="validerE"
      style="margin-top: 0.5rem; background-color: #4f46e5; color: white; border: none; padding: 0.3rem 0.8rem; border-radius: 6px; cursor: pointer; font-weight: 600;"
    >
      Valider
    </button>
    <p id="feedbackE" style="margin-top: 0.4rem; font-weight: 600; min-height: 1.2em;"></p>
  </div>

  <!-- Question droite : Coordonnées de B -->
  <div style="flex: 1 1 300px; min-width: 260px;">
    <p><strong>Coordonnées de B :</strong></p>
    <div style="display: flex; gap: 0.5rem;">
      <input id="bCoord1" placeholder="ex: 70°S" style="width: 80px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
      <input id="bCoord2" placeholder="ex: 45°O" style="width: 80px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
    </div>
    <button
      id="validerB"
      style="margin-top: 0.5rem; background-color: #4f46e5; color: white; border: none; padding: 0.3rem 0.8rem; border-radius: 6px; cursor: pointer; font-weight: 600;"
    >
      Valider
    </button>
    <p id="feedbackB" style="margin-top: 0.4rem; font-weight: 600; min-height: 1.2em;"></p>
  </div>

</div>

<script>
  function verifierCoordonneesFlexibles(id1, id2, valA, valB, feedbackId) {
    const v1 = document.getElementById(id1).value.trim().toUpperCase();
    const v2 = document.getElementById(id2).value.trim().toUpperCase();
    const feedback = document.getElementById(feedbackId);

    const isValid =
      (v1 === valA && v2 === valB) || (v1 === valB && v2 === valA);

    if (isValid) {
      feedback.textContent = "✅ Bravo !";
      feedback.style.color = "#198754";
    } else {
      feedback.textContent = "❌ Mauvaise réponse. Essaie encore.";
      feedback.style.color = "#d90429";
    }
  }

  // Coordonnées de E : 30°N et 30°E
  document.getElementById("validerE").addEventListener("click", () => {
    verifierCoordonneesFlexibles("eCoord1", "eCoord2", "30°N", "30°E", "feedbackE");
  });

  // Coordonnées de B : 10°S et 60°O
  document.getElementById("validerB").addEventListener("click", () => {
    verifierCoordonneesFlexibles("bCoord1", "bCoord2", "10°S", "60°O", "feedbackB");
  });
</script>

  

</section>
<section class="training-links" data-title="Pour s’entraîner">
