      <h3 class="section-title">
        <span class="arrow"></span>
        <span class="title-text">1. Repérage - Pavé droit</span>
        <span class="cta">Cliquez pour ouvrir ▼</span>
      </h3>
      <div class="collapsible-section">

<section class="example-corrected" data-title="Exemple corrigé">
        <div style="text-align: center; margin-bottom: 1rem;">
          <img src="/images/reperagepave.jpeg" alt="Pavé droit" style="max-width: 100%; border-radius: 12px;" />
        </div>

<div style="display: flex; gap: 2rem; font-family: system-ui, sans-serif; margin: 2rem 0; flex-wrap: wrap;">

  <!-- Question gauche : Coordonnées de M -->
  <div style="flex: 1 1 300px; min-width: 260px;">
    <p><strong>Coordonnées de M :</strong></p>
    <div style="display: flex; gap: 0.5rem;">
      <input id="mX" placeholder="x" style="width: 50px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
      <input id="mY" placeholder="y" style="width: 50px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
      <input id="mZ" placeholder="z" style="width: 50px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
    </div>
    <button
      id="validerM"
      style="margin-top: 0.5rem; background-color: #4f46e5; color: white; border: none; padding: 0.3rem 0.8rem; border-radius: 6px; cursor: pointer; font-weight: 600;"
    >
      Valider
    </button>
    <p id="feedbackM" style="margin-top: 0.4rem; font-weight: 600; min-height: 1.2em;"></p>
  </div>

  <!-- Question droite : Coordonnées de T -->
  <div style="flex: 1 1 300px; min-width: 260px;">
    <p><strong>Coordonnées de T :</strong></p>
    <div style="display: flex; gap: 0.5rem;">
      <input id="tX" placeholder="x" style="width: 50px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
      <input id="tY" placeholder="y" style="width: 50px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
      <input id="tZ" placeholder="z" style="width: 50px; text-align: center; padding: 0.3rem; border: 1.5px solid #ccc; border-radius: 6px;" />
    </div>
    <button
      id="validerT"
      style="margin-top: 0.5rem; background-color: #4f46e5; color: white; border: none; padding: 0.3rem 0.8rem; border-radius: 6px; cursor: pointer; font-weight: 600;"
    >
      Valider
    </button>
    <p id="feedbackT" style="margin-top: 0.4rem; font-weight: 600; min-height: 1.2em;"></p>
  </div>

</div>

<script>
  function verifierCoordonnees(xId, yId, zId, xVal, yVal, zVal, feedbackId) {
    const x = document.getElementById(xId).value.trim();
    const y = document.getElementById(yId).value.trim();
    const z = document.getElementById(zId).value.trim();
    const feedback = document.getElementById(feedbackId);

    if (x === xVal && y === yVal && z === zVal) {
      feedback.textContent = "✅ Bravo !";
      feedback.style.color = "#198754";
    } else {
      feedback.textContent = "❌ Mauvaise réponse. Essaie encore.";
      feedback.style.color = "#d90429";
    }
  }

  // M : (4,2,0)
  document.getElementById("validerM").addEventListener("click", () => {
    verifierCoordonnees("mX", "mY", "mZ", "4", "2", "0", "feedbackM");
  });

  // T : (0,2,3)
  document.getElementById("validerT").addEventListener("click", () => {
    verifierCoordonnees("tX", "tY", "tZ", "0", "2", "3", "feedbackT");
  });
</script>

</section>

<section class="training-links" data-title="Pour s’entraîner">
