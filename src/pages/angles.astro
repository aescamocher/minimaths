      <script>
        document.addEventListener('DOMContentLoaded', () => {
          const canvas = document.getElementById('angleCanvas');
          const ctx = canvas.getContext('2d');
          const feedback = document.getElementById('quizFeedback');
          const scoreDisplay = document.getElementById('quizScore');
          const restartBtn = document.getElementById('quizRestart');
          const options = document.querySelectorAll('#quizOptions .quiz-button');

          const angles = [
            { deg: 0, type: "Nul" },
            { deg: 30, type: "Aigu" },
            { deg: 90, type: "Droit" },
            { deg: 135, type: "Obtus" },
            { deg: 180, type: "Plat" }
          ];

          let current = 0;
          let score = 0;
          let questions = [];

          function drawAngle(deg) {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            const cx = 150;
            const cy = 150;
            const len = 90;
            const rad = deg * Math.PI / 180;

            ctx.strokeStyle = "#e67e22";
            ctx.lineWidth = 6;

            ctx.beginPath();
            ctx.moveTo(cx, cy);
            ctx.lineTo(cx + len, cy);
            ctx.stroke();

            ctx.beginPath();
            if (deg === 0) return;
            else if (deg === 180) {
              ctx.moveTo(cx, cy);
              ctx.lineTo(cx - len, cy);
            } else {
              ctx.moveTo(cx, cy);
              ctx.lineTo(cx + len * Math.cos(rad), cy - len * Math.sin(rad));
            }
            ctx.stroke();
          }

          function startQuiz() {
            feedback.textContent = "";
            score = 0;
            current = 0;
            questions = [];
            for (let i = 0; i < 5; i++) {
              questions.push(angles[Math.floor(Math.random() * angles.length)]);
            }
            nextQuestion();
          }

          function nextQuestion() {
            if (current >= questions.length) {
              feedback.textContent = "üéâ Bravo ! Quiz termin√©.";
              feedback.className = "quiz-feedback";
              scoreDisplay.textContent = `Ton score : ${score} / ${questions.length}`;
              restartBtn.style.display = "inline-block";
              return;
            }
            drawAngle(questions[current].deg);
          }

          options.forEach(btn => {
            btn.addEventListener('click', () => {
              const guess = btn.textContent;
              const correct = questions[current].type;
              if (guess === correct) {
                feedback.textContent = "‚úÖ Bonne r√©ponse !";
                feedback.className = "quiz-feedback success";
                score++;
              } else {
                feedback.textContent = `‚ùå Mauvais choix‚Ä¶ C‚Äô√©tait ${correct}.`;
                feedback.className = "quiz-feedback error";
              }
              current++;
              setTimeout(() => {
                feedback.textContent = "";
                nextQuestion();
              }, 1200);
            });
          });

          restartBtn.addEventListener('click', () => {
            restartBtn.style.display = "none";
            scoreDisplay.textContent = "";
            startQuiz();
          });

          startQuiz();
        });
      </script>

