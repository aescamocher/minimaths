---
import Header from '../components/Header.astro';
import ThemeButton from '../components/ThemeButton.astro';
import '../styles/global.css';
---
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>MiniMaths</title>
<meta name="description" content="MiniMaths : ressources interactives de mathématiques pour les collégiens. Exercices corrigés, vidéos explicatives et fiches à télécharger par thème." />

</head>

  <body>
    <Header />
    <main class="container">
      <section style="text-align: center;">
  <h3 style="font-size: 1.3rem; margin-bottom: 1rem;">📚 Thèmes</h3>
</section>

<ThemeButton name="Angles" link="/angles" />
<ThemeButton name="Equations" link="/equations" />
<ThemeButton name="Fonctions" link="/fonctions" />
<ThemeButton name="Fractions" link="/fractions" />
<ThemeButton name="Histoire des Maths" link="/histoire" />
<ThemeButton name="Puissances" link="/puissances" />
<ThemeButton name="Pythagore" link="/pythagore" />
<ThemeButton name="Statistiques" link="/statistiques" />
<ThemeButton name="Thalès" link="/thales" />
<ThemeButton name="Trigonométrie" link="/trigonometre" />

<!-- Séparation visuelle -->
<hr style="margin: 3rem auto 2rem; border: none; height: 2px; background-color: #ccc; width: 60%;" />

<!-- Section Ressources -->
<section style="text-align: center;">
  <h3 style="font-size: 1.3rem; margin-bottom: 1rem;">📁 Ressources</h3>
  <ThemeButton name="Sites utiles" link="/ressources/sites-utiles" />
</section>

    

<div style="text-align: center; margin-top: 2rem; font-size: 0.9rem; color: gray;">
  <a href="https://creativecommons.org/licenses/by-nc/4.0/" target="_blank" rel="noopener noreferrer" style="text-decoration: none; color: inherit;">
    <img src="https://licensebuttons.net/l/by-nc/4.0/88x31.png" alt="CC BY-NC 4.0" style="vertical-align: middle; margin-right: 0.5rem;" />
    Contenus sous licence CC BY-NC 4.0 – MiniMaths © 2025
  </a>
</div>

    </main>
  </body>
</html>
